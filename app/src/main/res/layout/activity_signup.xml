<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context="com.smarthome.SignUp">



    <ImageView
        android:id="@+id/icon"
        android:layout_width="358dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:src="@drawable/logo1" />

    <!-- User Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext"
        android:weightSum="3"
        android:layout_marginBottom="4dp"
        android:layout_height="45dp">

        <!-- User Name Label -->
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="User Name"
            android:textSize="18sp"
            android:textColor="@color/White"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />

        <EditText android:id="@+id/edt_R_name"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="text"
            android:layout_marginBottom="2dp"
            android:textColor="@color/White"
            android:background="@android:color/transparent"
            />


    </LinearLayout>

    <!-- Mail -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext"
        android:weightSum="3"
        android:layout_marginBottom="4dp"
        android:layout_height="45dp">

        <!-- Mail Label -->
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Email"
            android:textSize="18sp"
            android:textColor="@color/White"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />

        <EditText android:id="@+id/edt_R_mail"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:textColor="@color/White"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            />



    </LinearLayout>

    <!-- Age -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext"
        android:weightSum="3"
        android:layout_height="45dp">

        <!-- Age Label -->
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Age"
            android:textSize="18sp"
            android:textColor="@color/White"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />

        <EditText android:id="@+id/edt_R_age"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:textColor="@color/White"
            android:background="@android:color/transparent"
            android:inputType="number"
            />



    </LinearLayout>

    <!-- Password -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_edittext"
        android:weightSum="3"
        android:layout_height="45dp">

        <!-- Password Label -->
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:text="Password"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/White"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
             />

        <EditText android:id="@+id/edt_R_pass"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:textColor="@color/White"
            android:background="@android:color/transparent"
            android:inputType="textPassword" />


    </LinearLayout>

    <Button android:id="@+id/btn_Reg_User"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:textColor="@color/White"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mybutton"
        android:padding="12dp"
        android:text="Sign up"/>

    <TextView
        android:id="@+id/txt_gologin"
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="go Login"
        android:textColor="@color/White"
        android:textSize="18sp" />


</LinearLayout>
